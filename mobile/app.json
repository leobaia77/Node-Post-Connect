{
  "expo": {
    "name": "GrowthTrack",
    "slug": "growthtrack",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E8F5F0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.growthtrack.app",
      "infoPlist": {
        "NSHealthShareUsageDescription": "GrowthTrack reads your health data to provide personalized sleep, activity, and nutrition recommendations tailored to your athletic goals.",
        "NSHealthUpdateUsageDescription": "GrowthTrack does not write to your health data."
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": []
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E8F5F0"
      },
      "package": "com.growthtrack.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-health-connect",
        {
          "healthSharePermission": "GrowthTrack reads your health data to provide personalized recommendations.",
          "healthUpdatePermission": "GrowthTrack does not write to your health data."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "scheme": "growthtrack",
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
